{
	"compilerOptions": {
		"module": "CommonJS",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitReturns": true,
		"allowJs": true,
		"target": "es2020",
		"lib": ["ES2020", "DOM"],
		"sourceMap": true,
		"outDir": "./lib",
		"pretty": true,
		// "baseUrl": "./",
		"incremental": true
	}
}
